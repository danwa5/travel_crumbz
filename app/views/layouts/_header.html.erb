<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#"><strong>TRAVEL</strong> CRUMBZ</a>
    </div>
    <div id="navbar" class="navbar-collapse collapse">
      <% if signed_in? %>
        <ul class="nav navbar-nav navbar-right">
        </ul>
      <% else %>
        <div class="btn-toolbar pull-right" role="toolbar" aria-label="Sign In/Up">
          <div class="btn-group" role="group" aria-label="Sign Up">
            <%= link_to('Sign Up', signup_path, class: 'btn btn-default navbar-btn') %>
          </div>
          <div class="btn-group" role="group" aria-label="Sign In">
            <button type="button" class="btn btn-primary dropdown-toggle navbar-btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Sign In <span class="caret"></span>
            </button>
            <div id="sign-in-panel" class="dropdown-menu dropdown-menu-right">
              <%= form_for(:session, url: sessions_path, html: { class: "form-horizontal" }) do |f| %>
                <div class="form-group">
                  <div class="col-sm-12">
                    <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-12">
                    <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
                  </div>
                </div>
                <div class="form-group">
                  <div class="col-sm-12">
                    <%= f.submit "Sign In", class: "btn btn-primary sign-in-button" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        
      <% end %>
    </div><!--/.navbar-collapse -->
  </div>
</nav>