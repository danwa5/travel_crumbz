<% provide(:title, 'Edit Trip') %>

<div class="blog-post">
  <div class="page-header">
    <h2>Edit Trip</h2>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= form_for([@user, @trip], html: { class:"form-horizontal edit-trip" }) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <div class="form-group">
          <%= f.label :name, nil, class: "col-sm-3 control-label" %>
          <div class="col-sm-8">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>

        <div id="locations">
        <% counter = 0 %>
        <%= f.fields_for :locations do |location| %>
          <% counter += 1 %>
          <div class="form-group">
            <%= location.label :address, "Location", class: "col-sm-3 control-label" %>
            <div class="col-sm-8">
              <div class="input-group">
                <span class="input-group-addon">
                  <%= location.text_field :order, size: 4, class: "location-order", data: { toggle: 'tooltip', placement: 'top' }, title: 'Select and edit the order of location in the trip' %>
                </span>
                <%= location.text_field :address, {class: "form-control"} %>
              </div>
            </div>
          </div>
        <% end %>
        </div>

        <div class="form-group">
          <div class="col-sm-7 col-sm-offset-3">
            <%= f.submit "Update Trip", class: "btn btn-large btn-primary" %>
            <button type="button" id="add-location-button" class="btn btn-info">Add Location</button>
            <button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">Upload Photos</button>
            <%= link_to "Cancel", user_path(@user), class: "btn btn-default" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Upload Photos</h4>
      </div>
      <%= form_for([@user, @trip, @trip.photos.build], html: {class: "form-inline", role: "form", multipart: true}) do |f| %>
      <div class="modal-body">
        <div class="form-group">
          <%= f.file_field :original_file, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.text_field :caption, {class: "form-control", placeholder: "Caption (optional)"} %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit 'Upload', {id: "photo-upload", class: "btn btn-primary"} %>
      </div>
      <% end %>
    </div>
  </div>
</div>
