<script src="//maps.google.com/maps/api/js?v=3.23&sensor=false&client=&key=&libraries=geometry&language=&hl=&region="></script> 
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<div class="content">
  <div class="btn-group" role="group" aria-label="...">
    <div class="btn-group" role="group">
      <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        <span class="glyphicon glyphicon-plane" aria-hidden="true"></span> My Trips
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
        <% if @trip %>
          <% current_user.trips.each do |t| %>
            <li<%= t == @trip && current_user.trips.count > 1 ? ' class=active' : '' %>>
              <%= link_to t.name, user_trip_path(current_user, t) %>
            </li>
          <% end %>
        <% else %>
          <li class="disabled"><a>You have 0 trips</a></li>
        <% end %>
      </ul>
    </div>
    <%= link_to new_user_trip_path(current_user), class: "btn btn-default" do %>
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add new trip
    <% end %>
    <% if @trip %>
      <%= link_to edit_user_trip_path(current_user, @trip), class: "btn btn-default" do %>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit trip
      <% end %>
      <%= link_to user_trip_path(current_user, @trip), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default" do %>
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Delete trip
      <% end %>
    <% end %>
  </div>

  <br/><br/>

  <div class="row">
    <div style='width: 800px;'>
      <div id="map"></div>
      <div id="trip-body">
        <div class="trip-meta">
          <div class="trip-view">
            <div class="fa"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></div>
            <span class="count">123</span>
          </div>
          <div class="trip-like">
            <div class="fa"><span class="glyphicon glyphicon-heart" aria-hidden="true"></span></div>
            <span class="count">123</span>
          </div>
          <div class="trip-comment">
            <div class="fa"><span class="glyphicon glyphicon-comment" aria-hidden="true"></span></div>
            <span class="count">123</span>
          </div>
          <div class="trip-location">
            <div class="fa"><span class="glyphicon glyphicon-pushpin" aria-hidden="true"></span></div>
            <span class="count">123</span>
          </div>
        </div>
        <div class="trip-details">
          <p class="list-group"></p>
          <div class="row">
            <div class="col-xs-6 col-md-3">
              <% @photos.each do |photo| %>
                <%= image_tag(photo.original_file.thumbnail.url, class: "img-responsive") %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
var handler = Gmaps.build('Google');
var provider_options = { scrollwheel: false };
  handler.buildMap({ provider: provider_options, internal: {id: 'map'}}, function() {
  var json_array = <%=raw @location_hash.to_json %>;
  var markers = handler.addMarkers(json_array);

  _.each(json_array, function(json, index){
    json.marker = markers[index];
  });

  var polylines = handler.addPolylines(
    [ json_array ],
    { strokeColor: '#FF0000', strokeWeight: 1, strokeOpacity: 0.8 }
  );
  createLocationList(json_array);
  handler.bounds.extendWith(markers);
  handler.bounds.extendWith(polylines);
  handler.fitMapToBounds();

  if (json_array.length === 1) {
    handler.getMap().setZoom(11);
  }
});

function createLocationList(json_array) {
  _.each(json_array, function(json, index) {
    var $label = $('<span class="label label-primary label-location">' + json.marker_title + '</span> ');
    $label.appendTo('.list-group');
    bindLabelToMarker($label, json.marker);
  });
};

function bindLabelToMarker($label, marker) {
  $label.on('click', function() {
    handler.getMap().setZoom(11);
    marker.setMap(handler.getMap()); //because clusterer removes map property from marker
    marker.panTo();
    google.maps.event.trigger(marker.getServiceObject(), 'click');
  })
};
</script>