<% provide(:title, 'New Trip') %>

<div class="col-md-9 col-md-offset-1">
  <div class="content">
    <div class="page-header">
      <h2>New Trip</h2>
    </div>

    <%= form_for([@user, @trip], html: { class:"form-horizontal new-trip" }) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
        <%= f.label :name, nil, class: "col-sm-3 control-label" %>
        <div class="col-sm-8">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :start_date, 'Dates', class: "col-sm-3 control-label" %>
        <div class="col-sm-8">
          <div class="form-inline">
            <%= f.text_field :start_date, class: 'form-control', placeholder: 'From' %>
            <%= f.text_field :end_date, class: 'form-control', placeholder: 'To' %>
          </div>
        </div>
      </div>

      <div id="locations"></div>

      <div class="form-group">
        <div class="col-sm-7 col-sm-offset-3">
          <%= f.submit "Add new trip", class: "btn btn-large btn-primary" %>
          <button type="button" id="add-location-button" class="btn btn-info">Add Location</button>
          <%= link_to "Cancel", user_path(@user), class: "btn btn-default" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
