<% provide(:title, "Account Settings") %>

<script src="//maps.google.com/maps/api/js?v=3.18&sensor=false&client=&key=&libraries=geometry&language=&hl=&region="></script> 
<script src="//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"></script>
<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/infobox/1.1.9/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<div class="blog-post">
  <div class="page-header">
    <h2><%= @current_user.full_name %></h2>
  </div>

  <div class="btn-group" role="group" aria-label="...">
    <div class="btn-group" role="group">
      <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
        <span class="glyphicon glyphicon-plane" aria-hidden="true"></span> My Trips
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
        <% if @current_trip %>
          <% @trips.each do |trip| %>
            <li<%= trip == @current_trip && @trips.count > 1 ? ' class=active' : '' %>>
              <%= link_to trip.name, user_path(current_user, trip: trip.slug) %>
            </li>
          <% end %>
        <% else %>
          <li class="disabled"><a>You have 0 trips</a></li>
        <% end %>
      </ul>
    </div>
    <%= link_to new_user_trip_path(current_user), class: "btn btn-default" do %>
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add new trip
    <% end %>
    <% if @current_trip %>
      <%= link_to edit_user_trip_path(current_user, @current_trip), class: "btn btn-default" do %>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Edit trip
      <% end %>
      <%= link_to user_trip_path(current_user, @current_trip), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-default" do %>
        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Delete trip
      <% end %>
    <% end %>
  </div>

  <br/><br/>

  <div class="row">
    <div style='width: 800px;'>
      <div id="map" style='width: 800px; height: 400px;'></div>
      <div id='sidebar_container'></div>
    </div>
  </div>
</div>

<script type="text/javascript">
function createSidebarLi(json){
  return ("<li class='list-group-item'><a>" + json.marker_title + "</a></li>");
};

function bindLiToMarker($li, marker){
  $li.on('click', function(){
    handler.getMap().setZoom(11);
    marker.setMap(handler.getMap()); //because clusterer removes map property from marker
    marker.panTo();
    google.maps.event.trigger(marker.getServiceObject(), 'click');
  })
};

function createSidebar(json_array){
  _.each(json_array, function(json){
    var $li = $( createSidebarLi(json) );
    $li.appendTo('#sidebar_container');
    bindLiToMarker($li, json.marker);
  });
};

var handler = Gmaps.build('Google');
var provider_options = { scrollwheel: false };
handler.buildMap({ provider: provider_options, internal: {id: 'map'}}, function() {
  var json_array = <%=raw @location_hash.to_json %>;

  var markers = handler.addMarkers(json_array);

  _.each(json_array, function(json, index){
    json.marker = markers[index];
  });

  var polylines = handler.addPolylines(
    [
      json_array
    ],
    { strokeColor: '#FF0000', strokeWeight: 1, strokeOpacity: 0.8 }
  );
  createSidebar(json_array);
  handler.bounds.extendWith(markers);
  handler.bounds.extendWith(polylines);
  handler.fitMapToBounds();

  if (json_array.length === 1) {
    handler.getMap().setZoom(11);
  }
});
</script>
